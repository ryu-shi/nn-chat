doctype html 
html(lang="ja")
    head
        meta(charset="utf-8")
        title NNチャット
    body
        h1 NNチャット
        a(href="/logout") ログアウト
        form(method="post", action="/posts")
            div
                textarea(name="message", placeholder="メッセージ",col="40",row="5")
            div
                button(type="submit") 送信
    h2 投稿一覧
    each post in posts
        div
            p 送信日時  #{post.createdAt}
            p 投稿内容 #{post.message}
        hr
